// Aktuális nyelv kiolvasása a URL-ből vagy localStorage-ból
function getCurrentLanguage() {
  // URL paraméterből
  const urlParams = new URLSearchParams(window.location.search);
  let lang = urlParams.get("lang");

  // Ha nincs URL paraméter, ellenőrizzük a localStorage-t
  if (!lang) {
    lang = localStorage.getItem("selectedLanguage");
  }

  // Ha nincs se URL paraméter, se localStorage, alapértelmezett nyelv
  if (!lang || !translations[lang]) {
    lang = "hu"; // Alapértelmezett nyelv
  }

  // Mentés localStorage-ba
  localStorage.setItem("selectedLanguage", lang);

  return lang;
}

// Aktuális nyelv
let currentLanguage = getCurrentLanguage();

// Nyelv beállítása
function setLanguage(lang) {
  if (translations[lang]) {
    currentLanguage = lang;
    localStorage.setItem("selectedLanguage", lang);

    // URL frissítése
    const url = new URL(window.location);
    url.searchParams.set("lang", lang);
    window.history.pushState({}, "", url);

    // Oldal szövegeinek frissítése
    updatePageTexts();

    // Nyelvválasztó frissítése
    updateLanguageSelector();
  }
}

// Oldal szövegeinek frissítése
function updatePageTexts() {
  const elements = document.querySelectorAll("[data-i18n]");
  elements.forEach((element) => {
    const key = element.getAttribute("data-i18n");
    if (translations[currentLanguage][key]) {
      element.innerHTML = translations[currentLanguage][key];
    }
  });

  // Címkék frissítése
  document.querySelectorAll("[data-i18n-placeholder]").forEach((element) => {
    const key = element.getAttribute("data-i18n-placeholder");
    if (translations[currentLanguage][key]) {
      element.placeholder = translations[currentLanguage][key];
    }
  });

  // HTML title frissítése
  document.title = "GānCuju™️©️ - " + translations[currentLanguage]["title"];
}

// Nyelvválasztó frissítése
function updateLanguageSelector() {
  const selector = document.getElementById("languageSelector");
  if (selector) {
    selector.value = currentLanguage;
  }
}

// Nyelvválasztó létrehozása valódi zászlókkal
function createLanguageSelector() {
  const selector = document.createElement("div");
  selector.className = "language-selector";

  // Zászlók URL-jei és nyelvkódok
  const flags = {
    hu: "https://cdn.jsdelivr.net/gh/lipis/flag-icons@6.11.0/flags/4x3/hu.svg",
    en: "https://cdn.jsdelivr.net/gh/lipis/flag-icons@6.11.0/flags/4x3/gb.svg",
    cn: "https://cdn.jsdelivr.net/gh/lipis/flag-icons@6.11.0/flags/4x3/cn.svg",
    de: "https://cdn.jsdelivr.net/gh/lipis/flag-icons@6.11.0/flags/4x3/de.svg",
  };

  let html = '<div class="flag-container">';

  for (const [code, flagUrl] of Object.entries(flags)) {
    const activeClass = code === currentLanguage ? "active" : "";
    html += `<div class="flag ${activeClass}" onclick="setLanguage('${code}')" title="${languages[code]}">
                 <img src="${flagUrl}" alt="${languages[code]}">
               </div>`;
  }

  html += "</div>";
  selector.innerHTML = html;

  // Hozzáadás a dokumentumhoz
  document.body.appendChild(selector);

  // CSS hozzáadása
  const style = document.createElement("style");
  style.textContent = `
      .language-selector {
          position: fixed;
          top: 20px;
          right: 20px;
          z-index: 1001;
      }
      
      .flag-container {
          display: flex;
          gap: 10px;
      }
      
      .flag {
          width: 30px;
          height: 20px;
          cursor: pointer;
          opacity: 0.7;
          transition: all 0.3s ease;
          border-radius: 4px;
          overflow: hidden;
          box-shadow: 0 2px 5px rgba(0,0,0,0.2);
      }
      
      .flag img {
          width: 100%;
          height: 100%;
          object-fit: cover;
      }
      
      .flag:hover {
          opacity: 1;
          transform: scale(1.2);
      }
      
      .flag.active {
          opacity: 1;
          transform: scale(1.1);
          box-shadow: 0 0 10px rgba(255,255,255,0.5);
      }
  `;
  document.head.appendChild(style);
}

// Nyelvválasztó frissítése
function updateLanguageSelector() {
  document.querySelectorAll(".flag").forEach((flag) => {
    flag.classList.remove("active");
  });

  const activeFlag = document.querySelector(
    `.flag[onclick="setLanguage('${currentLanguage}')"]`
  );
  if (activeFlag) {
    activeFlag.classList.add("active");
  }
}

